<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="6dp"
      app:cardCornerRadius="4dp"
      app:cardElevation="2dp">
    
    <RelativeLayout
        android:id="@+id/ll_jianshu"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        
        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp">
                
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                
            </android.support.v7.widget.CardView>
            
            <TextView
                android:id="@+id/tv_author"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:clickable="true"
                android:maxLines="1"
                android:text="阿阳sunny"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <TextView
                android:id="@+id/tv_time"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="前天 22:30"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:id="@+id/tv_collectTag"
                android:background="@drawable/shap_rec"
                android:text="心理"
                android:clickable="true"
                android:padding="4dp"
                android:textColor="#ea6f5a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <TextView
                android:id="@+id/tv_read"
                android:layout_marginLeft="10dp"
                android:text="168"
                android:drawableLeft="@drawable/read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_talk"
                android:layout_marginLeft="10dp"
                android:text="168"
                android:drawableLeft="@drawable/talk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_like"
                android:layout_marginLeft="10dp"
                android:text="168"
                android:drawableLeft="@drawable/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
        </LinearLayout>
        
        <android.support.v7.widget.CardView
            android:id="@+id/cv_primary"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/iv_primary"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_width="100dp"
                android:layout_height="80dp"/>
            
        </android.support.v7.widget.CardView>
        
        <LinearLayout
            android:layout_above="@+id/ll_bottom"
            android:layout_below="@+id/ll_title"
            android:layout_toLeftOf="@+id/cv_primary"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/tv_title"
                android:maxLines="1"
                android:textStyle="bold"
                android:text="弱国无外交，弱人无社交"
                android:textSize="17sp"
                android:textColor="#2f2f2f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_content"
                android:maxLines="3"
                android:padding="3dp"
                android:text="最近参加的一些活动中，不乏行业大咖和知名人士，当寒暄一阵觉得气场相符，对方一般会加个微信然后优雅恰当地说句“下次聊”。 当有了联系方式后，我一般会礼貌性打个招呼或者补一个完整..."
                android:textColor="#403f3f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
        </LinearLayout>
        
    </RelativeLayout>

</android.support.v7.widget.CardView>